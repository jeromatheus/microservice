{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5003"
  },
  "Routes": [
    {
      // --- RUTA 1: AUTH (Pública - Puerto 5005) ---
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost", // Si falla, cambia a "127.0.0.1"
          "Port": 5005
        }
      ],
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [ "POST" ]
      // Sin AuthenticationOptions porque aquí entran para pedir el token
    },
    {
      // --- RUTA 2: PRODUCTOS (Privada - Puerto 5008) ---
      "DownstreamPathTemplate": "/api/product",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost", // Si falla, cambia a "127.0.0.1"
          "Port": 5008
        }
      ],
      "UpstreamPathTemplate": "/gateway/products",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],

      // Esta ruta SÍ está protegida
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      // --- RUTA 3: PARA CATÁLOGO
      "DownstreamPathTemplate": "/api/product/catalog",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5008 // El puerto de tu ProductMicroservice
        }
      ],
      "UpstreamPathTemplate": "/gateway/catalog",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ]
      // Nota: Sin AuthenticationOptions porque el catálogo suele ser público
    }
  ]
}